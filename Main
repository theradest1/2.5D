def game_setup():
    global black, white, green, red
    window.fill(white)     #clears the window
    mapDisp(map1)         #goes to function display map
    pygame.display.update()   #updates the window (a virtual screen not shown to physical screen)
    gameLoop()                 #goes to gameloop function


def mapDisp(mapVar):
    for y in range(0, 50):         #y goes from 0 to 50
        for x in range(0, 50):      #x goes from 0 to 50
            if mapVar[y, x]:         #if the x,y in map1 is 1 then:
                pygame.draw.rect(window, red, pygame.Rect(x, y, 1, 1))   #draws a tiny square (pixel)


def raycast(movement, correct):
    global pd, px, py, map1
    stepy = math.sin(pd/(180/3.14159))    #the step for each ray on the x and y
    stepx = math.cos(pd/(180/3.14159))   #the "180/pi" is to convert to radians
    #print("Look angle: ", pd)             #me commenting out debug prints
    #print("Step on the X: ", stepx)
    #print("Step on the Y: ", stepy)
    window.fill(white)                   #clear screen
    mapDisp(map1)                       #display map function
                                        #this is not the raycasting! this is just moving the player!
    if movement != "none":              #if an arrow key has been pressed
        if movement == "back":          
            pstepx = -1*(stepx/4)      #adds on the step 
            pstepy = -1*(stepy/4)
        else:
            pstepx = stepx/4
            pstepy = stepy/4
        if map1[int(py), int(px + pstepx)]:
            pstepx = 0
        if map1[int(py + pstepy), int(px)]:
            pstepy = 0
        px += pstepx
        py += pstepy
    for ray in range(-45, 45):
        fish_eye = abs(ray)
        stepy = math.sin((pd + ray) / (180 / 3.14159))
        stepx = math.cos((pd + ray) / (180 / 3.14159))
        hit = False
        n = 0
        rx = px
        ry = py
        while not hit or n >= 100:
            rx += stepx
            ry += stepy
            if map1[int(ry), int(rx)]:
                hit = True
                if map1[int(ry), int(rx-stepx)]:
                    color = (100, 100, 100)
                else:
                    color = (50, 50, 50)
                #if correct:
                n = n*math.cos(fish_eye/(180/3.1415))
                pygame.draw.rect(window, color, pygame.Rect((ray + 45)*5, 200 + 2*n, 5, 200 - 4*n))
            else:
                n += 1
                pygame.draw.rect(window, red, pygame.Rect(rx, ry, 1, 1))
    pygame.display.update()

def gameLoop():
    global pd
    play = True
    rotate = 0
    movement = "none"
    start_time = time.time()
    frames = 0
    correct = True
    while play:
        forward = False
        for event in pygame.event.get():
            if event.type == pygame.QUIT:
                pygame.quit()
                quit()
            rotate = 0
            movement = "none"
            if event.type == pygame.KEYDOWN:
                if event.key == pygame.K_LEFT:
                    #print("left")
                    rotate = -1
                if event.key == pygame.K_RIGHT:
                    #print("right")
                    rotate = 1
                if event.key == pygame.K_ESCAPE:
                    pygame.quit()
                    quit()
                if event.key == pygame.K_UP:
                    movement = "forward"
                elif event.key == pygame.K_DOWN:
                    movement = "back"
                if event.key == pygame.K_LSHIFT:
                    correct = True
                elif event.key == pygame.K_RSHIFT:
                    correct = False

        if rotate != 0 or movement != "none":
            pd += rotate
            if pd >= 360:
                pd -= 360
            elif pd < 0:
                pd += 360
            raycast(movement, correct)
        frames += 1
        if time.time()-start_time >= .1:
            text1 = font.render(str(frames*10), True, red)
            #window.blit(text1, (300, 1))
            pygame.display.update()
            frames = 0
            start_time = time.time()


game_setup()

time.sleep(10)
